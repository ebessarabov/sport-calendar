{% extends '::base.html.twig' %}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path('login') }}" method="post">
        <label for="username">{{ 'login.page.field.username'|trans }}:</label>
        <input type="text" id="username" name="_username" value="{{ last_username }}">

        <label for="password">{{ 'login.page.field.password'|trans }}:</label>
        <input type="password" id="password" name="_password">

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        <input type="hidden" name="_target_path" value="{{ path('exercises') }}">

        <button type="submit">{{ 'login.page.button.login'|trans }}</button>
    </form>
{% endblock %}
